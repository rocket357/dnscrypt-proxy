node (label: 'arm32') {
    def app

    stage('Clone repository') {
        checkout scm
    }
    
    stage('Build image') {
        app = docker.build("rocket357/dnscrypt-proxy")
    }

    stage('Push image') {
        docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-credentials') {
            app.push("${env.BUILD_NUMBER}")
            app.push("latest-arm32")
        }
    }
}
